<style>
    .demo_hero-section {
        position: relative;
        height: 100dvh;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        text-align: center;
    }

    .demo_headerr {
        position: absolute;
        top: 10px;
        width: 88%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: black;
    }

    .demo_headerr h1 {
    font-size: 37px;
    font-weight: bold;
    margin-top: unset;
}

    .demo_headerr p {
    font-size: 19px;
    margin-top: unset;
}

  .choose-gift {
    background-color: #ffeb3b;
    color: #000;
    border: none;
    padding: 16px 21px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    align-self: baseline;
}

.contentt {
    max-width: 398px;
    position: absolute;
    bottom: 90px;
    left: 90px;
}

  .contentt h2 {
    font-size: 48px;
    font-weight: bold;
    text-align: left;
}

    .description {
    font-size: 16px;
    margin: 20px 0;
    color: black !important;
    text-align: left;
}
    .shop-now {
        background-color: #000;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        display: inline-block;
    }

    .footerr {
        font-size: 12px;
        font-weight: bold;
    }

  .demo_header_main {
    width: 100%;
    display: flex
;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
    height: 80px;
}
    .footerr p {
        text-align: center;
        font-size: 14px;
    }

    .demo_hero_main {
        height: 100dvh;
        overflow: hidden;
        position: relative;
    }

    footer.footerr {
        width: 100%;
        background: #f5f5f5;
        color: black;
    }|
.description {
    font-size: 16px;
    margin: 20px 0;
    color: black;
}

    @media (max-width:768px) {
        .demo_headerr {
            position: absolute;
            top: 10px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: black;
            padding-right: 18px;
        }

        .contentt {
            max-width: 398px;
            position: absolute;
            bottom: 235px;
            left: 0px;
        }

        .demo_headerr h1 {
            font-size: 20px;
            font-weight: bold;
        }

           .demo_headerr p {
        font-size: 11px;
        text-align: left;
    }
.description {
    font-size: 16px;
    margin: 20px 0;
    color: black !important;
    text-align: center;
}

        .choose-gift {
            background-color: #ffeb3b;
            color: #000;
            border: none;
            padding: 10px 16px;
            font-size: 11px;
            font-weight: bold;
            cursor: pointer;
        }
    }
.btn_wrap {
    display: flex
;
}
</style>

<div class="demo_hero-main">
  <div class="demo_hero-section">

    <img src="{{ section.settings.hero_image | img_url: '1024x1024' }}" alt="Hero Image"
      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;" />

 
    <div class="demo_header_main">
      <div class="demo_headerr">
        <h1>{{ section.settings.heading }}</h1>
        <p>{{ section.settings.subheading }}</p>
        <button class="choose-gift" style="background-color: {{ section.settings.button_color }};">CHOOSE GIFT →</button>
      </div>
    </div>

    <div class="contentt">
      <h2>The Gift Guide</h2>
      <p class="description">{{ section.settings.description }}</p>
      <div class="btn_wrap">
      <a href="{{ section.settings.cta_button_link }}" class="shop-now">{{ section.settings.cta_button_text }}  →</a>
</div>
    </div>

  
    <footer class="footerr">
      <p style="color: {{ section.settings.footer_text_color }};">{{ section.settings.footer_text }}</p>
    </footer>
  </div>
</div>



{% schema %}
 {
  "name": "Huzaifa Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "Shop Now Button Link",

    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "Shop Now Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description Text",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#ffeb3b"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Footer Text Color",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "Huzaifa Section",
      "category": "Custom"
    }
  ]
}



{% endschema %}